.categoryitem{
     width: 25%;
     height: 300px;
     float: left;  
     background:#69c3aa ; 
}
.categoryitem .item{
        min-height: 400px;
        background: #69c3AA;
}
.categoryitem .item view{
        height: 50px;
        line-height: 50px;
        color: #ffff;
        text-align: center;
        font-size: 14px;
}
.categoryitem .item view.con{
        color: #fff;
        background: #41B091;
}

.contentItem{
        width: 75%;
      
        float: left;
        box-sizing: border-box;
       
}
.contentItem .content{
        min-height: 600px;
        width: 100%;
        background: #fff;
}
.contentItem .content .boxlist{
        padding-top:30rpx ;
}
.contentItem .content .title {
       padding-bottom: 40rpx;
       page-break-inside: 20rpx;
       color: #333;
       font-size: 28rpx;
       text-align: center;
        font-weight: 600;
}
.contentItem .content .title::before{
        content: '';
        width: 40rpx;
        height: 10rpx;
        background-color: red;
}
.contentItem .content .box {
     
     width: 33%;
     text-align: center;
     float: left;
     padding: 20rpx; 
     box-sizing: border-box;
}
.contentItem .content .box image {
     width: 100%;
}
.contentItem .content .box text {
       color: #333;
       font-size: 23rpx;
}