#swiperImage image{
        width: 100%;
}
.category{
    padding: 15px 0px 10px 0px;  
    background-color: #fff;  
}
.item{
       width: 20%;
       float: left;
       margin-bottom: 10px;
       text-align: center;
}
.icon_warp image{
        width: 40px;
        height: 40px;
}
.icon_warp text{
        font-size: 14px;
        display: block;
        color: #737373;
       
}
.commit_title {
        padding: 20rpx  0;
        font-size: 36rpx;
        text-align: center;
        font-family: "宋体";
        font-weight: 700;
}

.goods_list{
        height: 100px;
        padding-left: 100px;
        position: relative;
        background-color: #ffff;
}
.left{
        position: absolute;
        top: 10px;
        left: 10px;
}
.left image{
        width: 80px;
        height: 80px;
}
.right{
        position: 10px 0;
        height: 80px;
}
.goods_name{
        font-size: 14px;
}
.goods_address{
        color: #929292;
        font-size: 12px;
}
.goods_price{
        font-size: 14px;
        color: #f47378;
        width: 100%;
        line-height: 22px;
        height: 22px;
        margin-top: 5px;
}
.cart{
        position: absolute;
        right: 10px;
        bottom:10px;
}
 .cart image{
   width: 20px;
   height: 20px;
 }
 swiper{
         width: 100%;
         height: 270rpx;
 }
 .advertisement{
         width: 100%;
         margin-top: 10px;
 }
 .imgLeft{
         width: 50%;
         float: left;
 }
 .imgRight image{
     width: 25%;
     float: left;  
}
.goodList{
      padding:0 20rpx;
      

}
.goodList .item {
   border: 1px solid #9c88882e;
   box-sizing: border-box;
   width: 48%;
   float: left;
 
   
   /* border: 1px solid red; */
}
.goodList .item:nth-child(2n){
        margin-left:28rpx;
}
.goodList .item image{
        width: 100%;
}
.goodList .goodsName{
        margin: 0 10rpx;
        margin-top:20rpx;
         color:#333;
          font-size:26rpx;
          text-overflow: -o-ellipsis-lastline;
          overflow: hidden;
          /* text-overflow: ellipsis; */
          -webkit-box-orient: vertical;
          display: -webkit-box;
         -webkit-line-clamp: 2;
}
.goodList .does{
        margin-top: 20rpx;
        margin-bottom: 30rpx;
}
.goodList .does .goodsPrice{
   float:left;
   font-size: 28rpx;
   color: #cc0000;
   margin-left: 20rpx;
}
.goodList .does .goodsBuy{
        float:right;
        color: #999;
        font-size: 22rpx;
        margin-right: 50rpx;
        margin-top:4rpx;
     }

